<link rel="stylesheet" href="/css/login.css">
<div class="columns is-vcentered login-container">
  <div class="column is-half">
    <form class="box login-form" id="login-form">
      <div class="field">
        <label for="email-login" class="label">Email:</label>
        <div class="control">
          <input class="input" type="email" id="email-login" name="email-login" placeholder="e.g. alex@example.com" required>
        </div>
      </div>
      <div class="field">
        <label for="password-login" class="label">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-login" name="password-login" placeholder="********" required>
        </div>
      </div>
      <br>
      <br>
      <br>
      <div class="field">
        <button class="button btn-primary login-button" type="submit">Sign in</button>
      </div>
       <!-- Display login errors here -->
    </form>
  </div>
  <div class="column is-half">
    <form class="box signup-form" id="signup-form">
      <div class="field">
        <label for="username-signup" class="label">Username:</label>
        <div class="control">
          <input class="input" type="text" id="username-signup" name="username-signup" placeholder="Username" required>
        </div>
      </div>
      <div class="field">
        <label for="email-signup" class="label">Email:</label>
        <div class="control">
          <input class="input" type="email" id="email-signup" name="email-signup" placeholder="e.g. alex@example.com" required>
        </div>
      </div>
      <div class="field">
        <label for="password-signup" class="label">Password:</label>
        <div class="control">
          <input class="input" type="password" id="password-signup" name="password-signup" placeholder="********" required>
        </div>
      </div>
      <div class="field">
        <button class="button btn-primary login-button" type="submit">Sign up</button>
      </div><!-- Display signup errors here -->
    </form>
  </div>
</div>
<div id="error-message" class="error-message"></div>

<script src="/css/Javascript/login.js"></script>
