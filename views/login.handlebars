<head>
  <link rel="stylesheet" href="/css/login.css">
</head>

<div class="row login-container">
  <img src="https://images.unsplash.com/photo-1551632811-561732d1e306?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="a couple hiking on a trail" width="100%">
  <div class="col-md-6">

    <form class="form login-form box">
      <div class="form-group field">
        <label for="email-login" class="label">Email:</label>
        <div class="control">
          <input class="form-input input" type="email" id="email-login" placeholder="e.g. alex@example.com" />
        </div>
      </div>
      <div class="form-group field">
        <label for="password-login" class="label">Password:</label>
        <div class="control">
          <input class="form-input input" type="password" id="password-login" placeholder="********" />
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary button" type="submit">Sign in</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">

    <form class="form signup-form box">
      <div class="form-group field">
        <label for="name-signup" class="label">Name:</label>
        <div class="control">
          <input class="form-input input" type="text" id="name-signup" />
        </div>
      </div>
      <div class="form-group field">
        <label for="email-signup" class="label">Email:</label>
        <div class="control">
          <input class="form-input input" type="email" id="email-signup" placeholder="e.g. alex@example.com" />
        </div>
      </div>
      <div class="form-group field">
        <label for="password-signup" class="label">Password:</label>
        <div class="control">
          <input class="form-input input" type="password" id="password-signup" placeholder="********" />
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary button" type="submit">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="/Javascript/login.js"></script>
